{#                        </li>#}
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        {% if app.user %}
                        <li class="nav-item">
                            <a class="navbar-brand btn btn-secondary" href="{{ path('logout') }}">Выйти</a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        {% endblock %}
        <div class="center">
            {% block body %}
            {% endblock %}
        </div>

        {% block javascripts %}
            <script src="{{ asset('js/bootstrap.js') }}"></script>
        {% endblock %}
    </body>
</html>
